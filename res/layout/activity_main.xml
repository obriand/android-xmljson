<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/mainactivity_hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/mainactivity_hello_tv" />
    
    <Button
        android:id="@+id/mainactivity_xml_bt" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btGetCount"
        android:text="@string/mainactivity_load_xml_bt"
        android:layout_below="@id/mainactivity_hello_tv" />

    <Button
        android:id="@+id/mainactivity_json_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btGetItem"
        android:text="@string/mainactivity_load_json_bt"
        android:layout_below="@id/mainactivity_xml_bt" />

</RelativeLayout>